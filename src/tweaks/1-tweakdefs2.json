            { "op": "set", "field": "texture1", "value": {} },
            { "op": "set", "field": "texture2", "value": {} },
            { "op": "set", "field": "tolerance", "value": {} },
            { "op": "set", "field": "tracks", "value": 0 },
            { "op": "set", "field": "turnrate", "value": 60000 },
            { "op": "set", "field": "weaponacceleration", "value": 100 },
