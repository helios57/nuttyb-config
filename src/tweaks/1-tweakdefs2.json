            { "op": "set", "field": "dance", "value": {} },
            { "op": "set", "field": "interceptedbyshieldtype", "value": 0 },
            { "op": "set", "field": "model", "value": "Raptors/spike.s3o" },
            { "op": "set", "field": "reloadtime", "value": 1.1 },
