      "name": "Queenling Prima",
      "description": "Creates Queenling Prima from Raptor Matriarch Basic",
      "scope": "Global",
      "conditions": [],
      "mutations": [
        {
          "op": "clone_unit",
          "source": "raptor_matriarch_basic",
          "target": "raptor_miniq_a",
          "mutations": [
            { "op": "set", "field": "name", "value": "Queenling Prima" },
            { "op": "set", "field": "icontype", "value": "raptor_queen_veryeasy" },
            { "op": "multiply", "field": "health", "factor": 5 },
            {
              "op": "table_merge",
              "field": "customparams",
              "value": {
                "i18n_en_humanname": "Queenling Prima",
                "i18n_en_tooltip": "Majestic and bold, ruler of the hunt."
              }
            },
            {
              "op": "set",
              "field": "maxThisUnit",
              "value": {
                "type": "math",
                "expression": "max(1, ceil(2 * (spawn_mult / 3)))",
                "variables": {
                  "spawn_mult": { "type": "mod_option", "key": "raptor_spawncountmult", "default": 3 }
                }
              }
            }
          ]
        }
      ]
    },
