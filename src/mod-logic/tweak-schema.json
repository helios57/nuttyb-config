{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TweakDefinition",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "scope": { 
      "type": "string",
      "enum": ["UnitDefsLoop", "UnitDef_Post", "Global"]
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "type": { "const": "nameMatch" },
              "regex": { "type": "string" }
            },
            "required": ["type", "regex"]
          },
          {
            "properties": {
              "type": { "const": "nameNotMatch" },
              "regex": { "type": "string" }
            },
            "required": ["type", "regex"]
          },
          {
            "properties": {
              "type": { "const": "nameStartsWith" },
              "prefix": { "type": "string" }
            },
            "required": ["type", "prefix"]
          },
          {
            "properties": {
              "type": { "const": "nameEndsWith" },
              "suffix": { "type": "string" }
            },
            "required": ["type", "suffix"]
          },
          {
            "properties": {
              "type": { "const": "customParam" },
              "key": { "type": "string" },
              "value": { "type": ["string", "number", "boolean"] }
            },
            "required": ["type", "key", "value"]
          },
          {
            "properties": {
              "type": { "const": "category" },
              "value": { "type": "string" }
            },
            "required": ["type", "value"]
          }
        ]
      }
    },
    "mutations": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "op": { "const": "multiply" },
              "field": { "type": "string" },
              "factor": { "type": ["number", "string"] }
            },
            "required": ["op", "field", "factor"]
          },
          {
            "properties": {
              "op": { "const": "set" },
              "field": { "type": "string" },
              "value": { "type": ["string", "number", "boolean"] }
            },
            "required": ["op", "field", "value"]
          },
          {
            "properties": {
              "op": { "const": "remove" },
              "field": { "type": "string" }
            },
            "required": ["op", "field"]
          },
          {
            "properties": {
              "op": { "const": "assign_math_floor" },
              "target": { "type": "string" },
              "source": { "type": "string" },
              "factor": { "type": ["number", "string"] }
            },
            "required": ["op", "target", "source", "factor"]
          },
          {
            "properties": {
              "op": { "const": "list_append" },
              "field": { "type": "string" },
              "value": { "type": ["string", "number"] }
            },
            "required": ["op", "field", "value"]
          },
          {
            "properties": {
              "op": { "const": "list_remove" },
              "field": { "type": "string" },
              "value": { "type": ["string", "number"] }
            },
            "required": ["op", "field", "value"]
          },
          {
            "properties": {
              "op": { "const": "table_merge" },
              "field": { "type": "string" },
              "value": { "type": "object" }
            },
            "required": ["op", "field", "value"]
          },
          {
            "properties": {
              "op": { "const": "raw_lua" },
              "code": { "type": "string" }
            },
            "required": ["op", "code"]
          }
        ]
      }
    }
  },
  "required": ["name", "description", "scope", "conditions", "mutations"]
}
