{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TweakDefinition",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "scope": { 
      "type": "string",
      "enum": ["UnitDefsLoop", "UnitDef_Post", "Global"]
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "properties": {
              "type": { "const": "nameMatch" },
              "regex": { "type": "string" }
            },
            "required": ["type", "regex"]
          },
          {
            "properties": {
              "type": { "const": "nameNotMatch" },
              "regex": { "type": "string" }
            },
            "required": ["type", "regex"]
          },
          {
            "properties": {
              "type": { "const": "nameStartsWith" },
              "prefix": { "type": "string" }
            },
            "required": ["type", "prefix"]
          },
          {
            "properties": {
              "type": { "const": "nameEndsWith" },
              "suffix": { "type": "string" }
            },
            "required": ["type", "suffix"]
          },
          {
            "properties": {
              "type": { "const": "nameInList" },
              "names": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["type", "names"]
          },
          {
            "properties": {
              "type": { "const": "customParam" },
              "key": { "type": "string" },
              "value": { "type": ["string", "number", "boolean"] }
            },
            "required": ["type", "key", "value"]
          },
          {
            "properties": {
              "type": { "const": "customParamMatch" },
              "key": { "type": "string" },
              "regex": { "type": "string" }
            },
            "required": ["type", "key", "regex"]
          },
          {
            "properties": {
              "type": { "const": "fieldValue" },
              "field": { "type": "string" },
              "value": { "type": ["string", "number", "boolean"] }
            },
            "required": ["type", "field", "value"]
          },
          {
            "properties": {
              "type": { "const": "category" },
              "value": { "type": "string" }
            },
            "required": ["type", "value"]
          }
        ]
      }
    },
    "mutations": {
      "type": "array",
      "items": { "$ref": "#/definitions/mutation" }
    }
  },
  "definitions": {
    "value_source": {
      "oneOf": [
        { "type": ["string", "number", "boolean"] },
        {
          "type": "object",
          "properties": {
            "type": { "const": "mod_option" },
            "key": { "type": "string" },
            "default": { "type": ["number", "string", "boolean"] }
          },
          "required": ["type", "key"]
        },
        {
          "type": "object",
          "properties": {
            "type": { "const": "math" },
            "expression": { "type": "string" },
            "variables": { "type": "object" }
          },
          "required": ["type", "expression"]
        }
      ]
    },
    "mutation": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "op": { "const": "multiply" },
            "field": { "type": "string" },
            "factor": { "$ref": "#/definitions/value_source" }
          },
          "required": ["op", "field", "factor"]
        },
        {
          "properties": {
            "op": { "const": "set" },
            "field": { "type": "string" },
            "value": { "$ref": "#/definitions/value_source" }
          },
          "required": ["op", "field", "value"]
        },
        {
          "properties": {
            "op": { "const": "remove" },
            "field": { "type": "string" }
          },
          "required": ["op", "field"]
        },
        {
          "properties": {
            "op": { "const": "assign_math_floor" },
            "target": { "type": "string" },
            "source": { "type": "string" },
            "factor": { "$ref": "#/definitions/value_source" }
          },
          "required": ["op", "target", "source", "factor"]
        },
        {
          "properties": {
            "op": { "const": "list_append" },
            "field": { "type": "string" },
            "value": { "$ref": "#/definitions/value_source" }
          },
          "required": ["op", "field", "value"]
        },
        {
          "properties": {
            "op": { "const": "list_remove" },
            "field": { "type": "string" },
            "value": { "$ref": "#/definitions/value_source" }
          },
          "required": ["op", "field", "value"]
        },
        {
          "properties": {
            "op": { "const": "table_merge" },
            "field": { "type": "string" },
            "value": { "type": "object" }
          },
          "required": ["op", "field", "value"]
        },
        {
          "properties": {
            "op": { "const": "modify_weapon" },
            "weaponName": { "type": "string" },
            "mutations": { "type": "array", "items": { "$ref": "#/definitions/mutation" } }
          },
          "required": ["op", "mutations"]
        },
        {
          "properties": {
            "op": { "const": "clone_unit" },
            "source": { "type": "string" },
            "target": { "type": "string" },
            "targetSuffix": { "type": "string" },
            "mutations": { "type": "array", "items": { "$ref": "#/definitions/mutation" } }
          },
          "required": ["op"]
        },
        {
          "properties": {
            "op": { "const": "raw_lua" },
            "code": { "type": "string" }
          },
          "required": ["op", "code"]
        }
      ]
    }
  },
  "required": ["name", "description", "scope", "conditions", "mutations"]
}
